@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    @if (Model.MemeCatalog.Any())
    {
        <div class="esh-catalog-items row">
        @foreach (var catalogItem in Model.MemeCatalog)
        {
        <div class="esh-catalog-item col-md-4">
        <partial name="_product" for="@catalogItem" />
        </div>
    }
    </div>
    }
    else
    {
        <div class="row">
            THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
        </div>
    }
</div>
<div class="container">
    <button class="round">
        <img src="~/images/add.png" alt="Adicionar novo meme" height="40" width="40" />
    </button>
</div>
