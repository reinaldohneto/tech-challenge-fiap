@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container div-container">
    <form asp-page-handler="InputValueChanged">
        <input type="text" name="memeName" value="@Model.Filter" class="input-text" />
        <input type="submit" value="Pesquisar" class="input-submit" />
    </form>

    @if (Model.MemeCatalog.Any())
    {
        <div class="row">
        @foreach (var catalogItem in Model.MemeCatalog)
        {
            <div class="component-item">
                <partial name="_component" for="@catalogItem" />
            </div>
        }
    </div>
    }
    else
    {
        <div class="row">
            <h1 class="white-text">Não há nenhum meme cadastrado.</h1>
            <p class="white-text">Cadastre um novo meme clicando no botão a baixo.</p>
        </div>
    }
</div>
<div class="container">
    <button class="round-btn">
        <a asp-page="Create" />
        <img src="~/images/add.png" alt="Adicionar novo meme" height="40" width="40" />
    </button>
</div>